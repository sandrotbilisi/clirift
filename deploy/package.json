{
  "name": "riftberry",
  "version": "0.1.0",
  "description": "Secure LAN-based instance system for distributed protocols",
  "main": "dist/index.js",
  "bin": {
    "riftberry": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "build:exe": "node scripts/build-executables.js",
    "build:deploy": "node scripts/create-deploy-package.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint src",
    "format": "prettier --write src"
  },
  "keywords": [
    "lan",
    "secure",
    "distributed",
    "mpc",
    "dkg",
    "raspberry-pi"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.31.2",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "inquirer": "^8.2.6",
    "internal-ip": "^6.2.0",
    "jsonwebtoken": "^9.0.2",
    "node-forge": "^1.3.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.30",
    "@types/node-forge": "^1.3.11",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "caxa": "^3.0.1",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "pkg": "^5.8.1",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
